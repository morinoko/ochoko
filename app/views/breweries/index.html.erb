<div class="title-header">
  <h1><%= t('.title') %></h1>
  <%= link_to t('.add_html'), new_brewery_path, class: "button btn-add" %>
</div>

<% @locations.each do |location| %>
  <% if location.breweries.any? %>
    <h2><%= location.localized_name %></h2>
    
    <% location.breweries.each do |brewery| %>
      <h2><%= link_to brewery.localized_name, brewery %></h2>
    <% end %>
  <% end %>
<% end %>