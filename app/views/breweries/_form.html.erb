<%= form_for @brewery do |f| %>
  <h3><%= t('.name') %></h3>
  <div class="form-group">
    <%= f.label :name_ja %>
    <%= f.text_field :name_ja %>

    <% if @brewery.errors[:name_ja].any? %>
      <%= error_feedback(object: @brewery, attribute: :name_ja) %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :name_hiragana %>
    <%= f.text_field :name_hiragana %>

    <% if @brewery.errors[:name_hiragana].any? %>
      <%= error_feedback(object: @brewery, attribute: :name_hiragana) %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :name_en %>
    <%= f.text_field :name_en %>

    <% if @brewery.errors[:name_en].any? %>
      <%= error_feedback(object: @brewery, attribute: :name_en) %>
    <% end %>
  </div>

  <h3><%= t('activerecord.models.location') %></h3>
  <div class="form-group">
    <%= f.label :location_id, t('.choose_location') %>
    <%= f.collection_select(:location_id, @locations, :id, :localized_name, include_blank: true) %>
    
    <% if @brewery.errors[:location_id].any? %>
      <%= error_feedback(object: @brewery, attribute: :location_id) %>
    <% end %>
  </div>

  <%= f.submit t('.submit'), class: "button btn-regular"  %>
<% end %>