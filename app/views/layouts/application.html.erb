<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <%= render 'layouts/header' %>

    <% if flash[:alert] %>
      <div class="container">
        <div class="alert"><%= flash[:alert] %></div>
      </div>
    <% end %>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <%= render 'layouts/footer' %>
  </body>
</html>