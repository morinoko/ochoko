<header>
  <div class="container">
    <div class="logo"><%= link_to t('app_name'), root_path %></div>
    <nav>
      <ul>
        <% if logged_in? %>
          <li><%= link_to t('sakes.index.title'), sakes_path %></li> |
          <li><%= link_to current_user.username, user_path(current_user) %>
          <li><%= link_to t('logout'), logout_path, method: :delete %>
        <% else %>
          <li><%= link_to t('login'), login_path %></li>
          <li><%= link_to t('signup'), signup_path, class: "signup button btn-regular" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
